{{!-- Community Topic Page Template --}}
<div class="community-topic-container">
  <article class="topic-detail">
    <header class="topic-header">
      <h1>{{topic.title}}</h1>
    </header>
    <div class="topic-content">
      {{#if topic.body}}
        <div class="topic-body">{{topic.body}}</div>
      {{/if}}
    </div>
  </article>
</div>