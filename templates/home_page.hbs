{{!-- ヒーローセクション --}}
<div class="hero-section">
  <div class="container">
    <h1 class="hero-title">どのようにお手伝いできますか？</h1>
    <p class="hero-subtitle">お探しの情報を検索するか、カテゴリからお選びください</p>
    
    {{!-- 検索バー --}}
    <form class="hero-search" action="{{page_path 'search'}}" method="get">
      <div class="search-wrapper">
        <svg class="search-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
          <path d="M9 17A8 8 0 109 1a8 8 0 000 16z" stroke="currentColor" stroke-width="2"/>
          <path d="M15 15l4 4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
        <input type="search" 
               name="query" 
               class="hero-search-input" 
               placeholder="ヘルプを検索..."
               aria-label="検索">
        <button type="submit" class="hero-search-button" aria-label="検索実行">
          検索
        </button>
      </div>
    </form>
    
    {{!-- Popular Searches（JS生成） --}}
    <div class="popular-searches" data-tags="{{settings.popular_searches}}">
      <span class="popular-label">人気の検索:</span>
    </div>
  </div>
</div>

{{!-- カテゴリカード --}}
<div class="categories-section">
  <div class="container">
    <div class="categories-grid">
      {{#each categories}}
        <a href="{{url}}" 
           class="category-card" 
           data-category-index="{{@index}}"
           data-category-id="{{id}}">
          <div class="category-icon">
            {{#is @index 0}}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
              </svg>
            {{/is}}
            {{#is @index 1}}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20 4H4c-1.11 0-1.99.89-1.99 2L2 18c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V6c0-1.11-.89-2-2-2zm0 14H4v-6h16v6zm0-10H4V6h16v2z"/>
              </svg>
            {{/is}}
            {{#is @index 2}}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18 2H6c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm-6 2c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm6 16H6v-1.4c0-2 4-3.1 6-3.1s6 1.1 6 3.1V20z"/>
              </svg>
            {{/is}}
            {{#is @index 3}}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
                <path d="M22.7 19l-9.1-9.1c.9-2.3.4-5-1.5-6.9-2-2-5-2.4-7.4-1.3L9 6 6 9 1.6 4.7C.4 7.1.9 10.1 2.9 12.1c1.9 1.9 4.6 2.4 6.9 1.5l9.1 9.1c.4.4 1 .4 1.4 0l2.3-2.3c.5-.4.5-1.1.1-1.4z"/>
              </svg>
            {{/is}}
            {{#is @index 4}}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
                <path d="M7 2v11h3v9l7-12h-4l4-8z"/>
              </svg>
            {{/is}}
            {{#is @index 5}}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 17h-2v-2h2v2zm2.07-7.75l-.9.92C13.45 12.9 13 13.5 13 15h-2v-.5c0-1.1.45-2.1 1.17-2.83l1.24-1.26c.37-.36.59-.86.59-1.41 0-1.1-.9-2-2-2s-2 .9-2 2H8c0-2.21 1.79-4 4-4s4 1.79 4 4c0 .88-.36 1.68-.93 2.25z"/>
              </svg>
            {{/is}}
          </div>
          <h2 class="category-title">{{name}}</h2>
          <p class="category-description">{{description}}</p>
          <span class="category-count">{{sections.count}} 件の記事</span>
        </a>
      {{/each}}
    </div>
  </div>
</div>