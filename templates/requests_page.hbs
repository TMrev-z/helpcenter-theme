{{!-- Requests List Page Template --}}
<div class="requests-container">
  <header class="requests-header">
    <h1>お問い合わせ一覧</h1>
    <a href="/hc/requests/new" class="btn btn-primary">新規お問い合わせ</a>
  </header>

  <div class="requests-list">
    {{#each requests}}
      <article class="request-item">
        <a href="{{url}}" class="request-link">
          <h2 class="request-subject">{{subject}}</h2>
          <div class="request-meta">
            <span class="request-id">#{{id}}</span>
            <span class="request-status status-{{status}}">{{status}}</span>
            <time class="request-date">{{date created_at}}</time>
          </div>
        </a>
      </article>
    {{else}}
      <div class="no-requests">
        <p>お問い合わせはありません。</p>
        <a href="/hc/requests/new" class="btn btn-primary">初回お問い合わせ</a>
      </div>
    {{/each}}
  </div>
</div>