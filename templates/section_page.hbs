{{!-- templates/section_page.hbs --}}
{{> document_head}}
<body>
<main class="container">
  <h1>{{section.name}}</h1>
  {{#if section.articles}}
    <ul>{{#each section.articles}}<li><a href="{{url}}">{{title}}</a></li>{{/each}}</ul>
  {{else}}<p>このセクションには記事がありません。</p>{{/if}}
</main>
{{> document_footer}}