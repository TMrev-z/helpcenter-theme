{{!-- Community Post Page Template --}}
<div class="community-post-container">
  <article class="community-post-detail">
    <header class="post-header">
      <h1 class="post-title">{{post.title}}</h1>
      <div class="post-meta">
        {{#if post.author}}
          <span class="post-author">投稿者: {{post.author.name}}</span>
        {{/if}}
        {{#if post.created_at}}
          <time class="post-date">{{date post.created_at}}</time>
        {{/if}}
      </div>
    </header>

    <div class="post-content">
      {{#if post.body}}
        <div class="post-body">{{post.body}}</div>
      {{/if}}
    </div>

    <footer class="post-footer">
      {{#if post.comments_count}}
        <p class="comments-count">{{post.comments_count}}件のコメント</p>
      {{/if}}
    </footer>
  </article>

  {{#if comments}}
    <section class="comments-section">
      <h2>コメント</h2>
      {{#each comments}}
        <div class="comment">
          <div class="comment-author">{{author.name}}</div>
          <div class="comment-content">{{body}}</div>
          <time class="comment-date">{{date created_at}}</time>
        </div>
      {{/each}}
    </section>
  {{/if}}
</div>